    <servlet-name>EmployeeServlet</servlet-name>
    <url-pattern>/emp</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>system.user</param-name>
    <param-value>bhuwan.gautam</param-value>
  </context-param>
</web-app>